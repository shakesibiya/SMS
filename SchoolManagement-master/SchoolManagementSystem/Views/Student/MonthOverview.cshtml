@model SchoolManagementSystem.Models.StudentMonthOverviewModel
@{
    ViewBag.Title = "MonthOverview";
    Layout = "~/Views/Student/StudentLayout.cshtml";
    var currMonth = "Month";

    switch (@Model.Month)
    {
        case 1:
            currMonth = "Term 1";
            break;
        case 2:
            currMonth = "Term 2";
            break;
        case 3:
            currMonth = "Term 3";
            break;
        case 4:
            currMonth = "Term 4";
            break;
            //case 5:
            //    currMonth = "May";
            //    break;
            //case 6:
            //    currMonth = "June";
            //    break;
            //case 7:
            //    currMonth = "July";
            //    break;
            //case 8:
            //    currMonth = "August";
            //    break;
            //case 9:
            //    currMonth = "September";
            //    break;
            //case 10:
            //    currMonth = "October";
            //    break;
            //case 11:
            //    currMonth = "November";
            //    break;
            //case 12:
            //    currMonth = "December";
            //    break;
    }

}

<!-- Page Content -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@currMonth @Model.Year</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="panel panel-default">
    <div class="panel-heading">
        <i class="fa fa-bar-chart-o fa-fw"></i>Marks Overview
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Subject</th>
                                <th>Test 1</th>
                                <th>Test 2</th>
                                <th>Test 3</th>
                                <th>Test 4</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var subject in @Model.Subjects)
                            {
                                <tr>
                                    <td>@subject.Subject</td>

                                    @for (int i = 1; i <= 31; i++)
                                    {
                                        bool hasMark = false;
                                        foreach (var mark in @Model.StudentMarks)
                                        {
                                            if (mark.Date.Day == i && mark.Discipline_Id == subject.Id)
                                            {
                                                if (mark.Value == -1)
                                                {
                                                    <td><span class="text-danger"><b>A</b></span></td>
                                                }
                                                else
                                                {
                                                    <td><b>@mark.Value</b></td>
                                                }
                                                hasMark = true;
                                                break;
                                            }
                                        }
                                        if (!hasMark)
                                        {
                                        <td>-</td>
                                        }
                                    }

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.col-lg-12 (nested) -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.panel-body -->
</div>


<div class="panel panel-default">
    <div class="panel-heading">
        <i class="fa fa-bar-chart-o fa-fw"></i>Disciplines Average
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Subject</th>
                                <th>Average Mark</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var subject in @Model.Subjects)
                            {
                                <tr>
                                    <td>@subject.Subject</td>

                                    @{var average = @Model.StudentMarks.Where(y => y.Discipline_Id == subject.Id && y.Value != -1);}

                                @if (average.Count() != 0)
                                {
                                    <td>@{ double mark = average.Average(x => x.Value); @mark}</td>
                                }
                                else {
                                    <td>-</td>
                                }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.col-lg-12 (nested) -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.panel-body -->
</div>


