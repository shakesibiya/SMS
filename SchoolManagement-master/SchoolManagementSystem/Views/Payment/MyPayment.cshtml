@model IEnumerable<SchoolManagementSystem.Domain.Entities.Payment>

@{
    ViewBag.Title = "My Payments";
    Layout = "~/Views/Student/StudentLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">My Payments:</h1>
    </div>
    <!-- /.col-lg-12 -->
    <p>
        @Html.ActionLink("Pay online", "Index", "PayPal")
    </p>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Value)</th>
                        <th>@Html.DisplayNameFor(model => model.Type)</th>
                        <th>@Html.DisplayNameFor(model => model.Date)</th>
                        <th>@Html.DisplayNameFor(model => model.Discipline_Id)</th>
                        <th>@Html.DisplayNameFor(model => model.Student_PIN)</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Value)</td>
                            <td>@Html.DisplayFor(modelItem => item.Type)</td>
                            <td>@Html.DisplayFor(modelItem => item.Date)</td>
                            <td>@Html.DisplayFor(modelItem => item.Discipline_Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Student_PIN)</td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.Id })
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.col-lg-12 (nested) -->
</div>
<!-- /.row -->
