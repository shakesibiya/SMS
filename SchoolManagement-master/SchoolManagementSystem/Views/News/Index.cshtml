@model IEnumerable<SchoolManagementSystem.Domain.Entities.Post>

@{
    ViewBag.Title = "Posts";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<h2>Posts</h2>
<p>
    @Html.ActionLink("Create New", "AddNews")
</p>
@if (Model.Count() != 0)
{
    foreach (var item in Model)
    {
            <div class="preview">
                <h3>
                    @item.Topic
                </h3>
                <p>Date : @item.Date</p>
                @Html.ActionLink("Read", "Details", new { id = item.Id }, new { @class="btn btn-sm btn-primary", @style="padding-left: 20px; padding-right: 20px;"})
            </div>
    }
}
else
{
    <p style="padding: 20px 0px 100px 0px; font-size: 25px;" class="text-center">
        <span class="glyphicon glyphicon-exclamation-sign breathe" style="font-size: 80px; margin-bottom: 30px;"></span>
        <br />
        There are no Posts created.
    </p>
}

