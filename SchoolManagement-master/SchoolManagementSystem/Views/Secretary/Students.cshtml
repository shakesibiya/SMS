@model List<SchoolManagementSystem.Models.StudentViewModel>

@{
    ViewBag.Title = "Students";
    Layout = "~/Views/Secretary/SecretaryLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Students:</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>PIN</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Class</th>
                        <th>Mobile</th>
                        <th>Phone</th>
                        <th>Nationality</th>
                        <th>Religion</th>
                        <th>Email</th>
                        <th>Province</th>
                        <th>City</th>
                        <th>Postal Address</th>
                        <th>Street Address</th>
                        <th>Suburb</th>
                        <th>Postal Code</th>
                        <th>Deregister</th>
                        <th>Update</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.Student.PIN</td>
                            <td>@student.Student.FirstName</td>
                            <td>@student.Student.LastName</td>
                            <td>@student.ClassName</td>
                            <td>@student.Student.MobilePhoneNumber</td>
                            <td>@student.Student.PhoneNumber</td>
                            <td>@student.Student.Nationality</td>
                            <td>@student.Student.Religion</td>
                            <td>@student.Student.Email</td>
                            <td>
                                @student.Student.Province
                            </td>
                            <td>
                                @student.Student.City
                            </td>
                            <td>
                                @student.Student.PostalAddress
                            </td>
                            <td>
                                @student.Student.StreetAddress
                            </td>
                            <td>
                                @student.Student.Surbs
                            </td>
                            <td>
                                @student.Student.PostalCode
                            </td>
                            <td>
                                @Html.ActionLink("Deregister", "Deregister", new { id = student.Student.StudentID }, new { @class = "btn btn-danger btn-sm" })
                            </td>
                            <td>
                                @Html.ActionLink("Update", "UpdateStudent", new { id = student.Student.StudentID }, new { @class = "btn btn-warning btn-sm" })
                            </td>
                            <td>
                                @Html.ActionLink("Avatar", "UploadAvatar","Avatar", new { id = student.Student.StudentID }, new { @class = "btn btn-warning btn-sm" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.col-lg-12 (nested) -->
</div>
<!-- /.row -->
